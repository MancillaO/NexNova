<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cliente1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="10dp">

                <TextView
                    android:id="@+id/cliente_titulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".90"
                    android:text="Edgar Omar Mancilla Vaca"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />


                <ImageView
                    android:id="@+id/foto_cliente"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight=".10"
                    android:layout_below="@id/cliente_titulo"
                    android:src="@drawable/icon_depositar_cliente"
                    />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:layout_below="@id/cliente_titulo"
                android:layout_centerHorizontal="true"
                android:background="@drawable/background" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tituloID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID del Cliente:"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tituloCorreo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo:"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtCorreo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="edgarmncllav04@gmail.com"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tituloTelefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefono:"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTelefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtCorreo"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tituloTelefono"
                    android:text="5511343686"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtDetalles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTelefono"
                android:layout_toRightOf="@id/foto_cliente"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Ver Detalles"
                android:textColor="@color/primary_color"
                android:textSize="18sp"
                android:textStyle="italic"
                android:clickable="true"
                android:onClick="onClick"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>